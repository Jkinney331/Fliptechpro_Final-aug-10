{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:3000/",
        "http://localhost:3000/pricing",
        "http://localhost:3000/contact"
      ],
      "numberOfRuns": 3,
      "settings": {
        "preset": "desktop",
        "throttling": {
          "rttMs": 40,
          "throughputKbps": 10240,
          "cpuSlowdownMultiplier": 1
        },
        "screenEmulation": {
          "mobile": false,
          "width": 1920,
          "height": 1080,
          "deviceScaleFactor": 1,
          "disabled": false
        }
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.9 }],
        "categories:accessibility": ["error", { "minScore": 0.95 }],
        "categories:best-practices": ["error", { "minScore": 0.95 }],
        "categories:seo": ["error", { "minScore": 0.95 }],
        "categories:pwa": "off",
        
        "first-contentful-paint": ["error", { "maxNumericValue": 2000 }],
        "largest-contentful-paint": ["error", { "maxNumericValue": 2500 }],
        "cumulative-layout-shift": ["error", { "maxNumericValue": 0.1 }],
        "total-blocking-time": ["error", { "maxNumericValue": 300 }],
        "speed-index": ["error", { "maxNumericValue": 3400 }],
        "interactive": ["error", { "maxNumericValue": 3800 }],
        
        "uses-responsive-images": "error",
        "uses-optimized-images": "error",
        "uses-webp-images": "warn",
        "uses-text-compression": "error",
        "uses-rel-preconnect": "warn",
        "font-display": "warn",
        
        "mainthread-work-breakdown": ["warn", { "maxNumericValue": 4000 }],
        "bootup-time": ["warn", { "maxNumericValue": 3500 }],
        "uses-long-cache-ttl": "warn",
        "dom-size": ["warn", { "maxNumericValue": 1500 }],
        
        "no-unload-listeners": "error",
        "no-document-write": "error",
        "uses-passive-event-listeners": "error",
        
        "unused-javascript": ["warn", { "maxNumericValue": 100000 }],
        "unused-css-rules": ["warn", { "maxNumericValue": 50000 }],
        "modern-image-formats": "warn",
        
        "third-party-summary": "warn",
        "third-party-facades": "warn"
      }
    },
    "upload": {
      "target": "temporary-public-storage",
      "serverBaseUrl": "https://your-lhci-server.example.com",
      "token": "YOUR_LHCI_BUILD_TOKEN"
    }
  }
}